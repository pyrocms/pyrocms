<?xml version="1.0" encoding="UTF-8"?>
<module version="0.3" type="content">
	<name>
		<en>Products</en>
		<es>Productos</es>
	</name>
	<description>
		<en>Show visitors what products you sell and allows images and price information to be added.</en>
		<es>Enséñale a tus visitantes que productos tu vendes y permíte agregarle información gráfica y de precios.</es>
	</description>
	<is_frontend>1</is_frontend>
	<is_backend>1</is_backend>
	<is_backend_sidebar>1</is_backend_sidebar>
	<controllers>
		<controller name="admin">
			<method>index</method>
			<method>create</method>
			<method>edit</method>
			<method>delete</method>
		</controller>
	</controllers>
	<navigation>
		<admin>
			<new_item href="admin/products/create">
				<en>New product</en>
			</new_item>
		</admin>
	</navigation>
</module>
