<?xml version="1.0" encoding="UTF-8"?>
<module version="0.5" type="admin">
	<name>
		<en>Navigation</en>
		<es>Navegación</es>
	</name>
	<description>
		<en>Manage links on navigation menu's and all the navigation groups they belong to.</en>
		<es>Administra links en los menús de navegación y en todos los grupos de navegación al cual pertenecen.</es>
	</description>
	<is_frontend>0</is_frontend>
	<is_backend>1</is_backend>
	<is_backend_sidebar>1</is_backend_sidebar>
	<controllers>
		<controller name="admin">
			<method>index</method>
			<method>create</method>
			<method>edit</method>
			<method>delete</method>
		</controller>
		<controller name="groups">
			<method>index</method>
			<method>create</method>
			<method>edit</method>
			<method>delete</method>
		</controller>
	</controllers>
	<navigation>
		<admin>
			<new_item href="admin/navigation/create">
				<en>New link</en>
			</new_item>
		</admin>
	</navigation>
</module>
